{{#svgs}}
    ${{{name}}}: "{{{inline}}}" {{width}} {{height}};
{{/svgs}}

@mixin inline-svg($name, $fs: $font-size, $setSize: true) {
    background: transparent url(nth($name, 1)) no-repeat 50% 50%;
    background-size: 100%;
    @if($setSize) {
        width: em(nth($name, 2), $fs);
        height: em(nth($name, 3), $fs);
    }
}

@function inline-svg-width($name) {
    @return nth($name, 2);
}

@function inline-svg-height($name) {
    @return nth($name, 3);
}
